{
  "name": "js-dev-environment",
  "version": "1.0.0",
  "description": "Js dev environment based upon Pluralsight course by Cory House",
  "scripts": {
    "prestart": "babel-node scripts/startupMessage.js",
    "start": "npm-run-all --parallel open:src lint:watch test:watch start-mock-api",
    "lint": "esw src --color",
    "lint:watch": "npm run lint -- --watch",
    "open:src": "babel-node scripts/server.js",
    "test": "mocha --reporter progress scripts/testSetup.js \"src/**/*.test.js\"",
    "test:watch": "npm run test -- --watch",
    "generate-mock-data": "babel-node scripts/genMockData",
    "prestart-mock-api": "npm run generate-mock-data",
    "start-mock-api": "json-server --watch src/api/db.json --port 8089",
    "prebuild": "npm-run-all test lint",
    "build": "babel-node scripts/build.js",
    "postbuild": "babel-node scripts/distServer.js"
  },
  "author": "Johannes Lindgren",
  "license": "MIT",
  "dependencies": {
    "whatwg-fetch": "1.0.0"
  },
  "devDependencies": {
    "babel-cli": "^6.26.0",
    "babel-core": "^6.26.0",
    "babel-loader": "^7.1.5",
    "babel-preset-env": "^1.7.0",
    "babel-register": "^6.26.0",
    "chai": "^4.1.2",
    "chalk": "^2.3.2",
    "cheerio": "^1.0.0-rc.2",
    "compression": "^1.7.3",
    "cross-env": "^5.2.0",
    "css-loader": "^1.0.0",
    "eslint": "^5.3.0",
    "eslint-plugin-import": "^2.13.0",
    "eslint-watch": "^4.0.2",
    "express": "^4.16.3",
    "mini-css-extract-plugin":"^0.4.1",
    "html-webpack-plugin": "3.2.0",
    "jsdom": "^11.12.0",
    "json-schema-faker": "^0.5.0-rc15",
    "json-server": "^0.14.0",
    "mocha": "^5.2.0",
    "nock": "^9.4.4",
    "npm-run-all": "^4.1.3",
    "open": "^0.0.5",
    "rimraf": "^2.6.2",
    "style-loader": "^0.21.0",
    "webpack": "^4.16.5",
    "webpack-clean-plugin": "^0.2.3",
    "webpack-cli": "^3.1.0",
    "webpack-dev-middleware": "^3.1.3",
    "webpack-hot-middleware": "^2.22.3"
  }
}
